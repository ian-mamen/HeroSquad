{{#partial "content"}}
    <section class="landing-pg">
        <div class="land-left">
        </div>
        <div class="land-right">
        </div>

        <div class="squad">
            <div id="newMember">
                <p class="close">&cross;</p>
                <h2>Choose Squad Members</h2>
                {{#each heroes}}
                    <div class="hero-item">

                        <div class="hero-detail">
                            <p>Name: {{name}}</p>
                            <p>Super power: {{ power }}</p>
                            <a class="btn" href="/squad/new/{{id}}">Add To Squad</a>
                        </div>
                    </div>
                {{/each}}
            </div>
        <h2>
            <a class="btn" href="/squad-form">Create Your Squad</a>
            <br><br>
            {{#if squads}}
                LIST OF SQUADS
            </h2>
                {{#each squads}}
                    <div class="squad-cont">
                        <img src="" alt="">
                        <div>
                            <h1>{{ squadName }} </h1>
                            <p>Id: {{squadId}}</p>
                            <p>Purpose: {{cause}}</p>
                            <p>Max participants: {{ size }}</p>
                            <br><br>
                            <h3>MEMBERS</h3>
                            <a class="btn" href="/new/member/{{squadId}}">Bind Id</a>
                            <button class="addMember add-btn" >Add New Member</button>
                            {{#each squadMembers}}
                                <div class="member-cont">
                                    <h5>Name: {{this.name}}</h5>
                                    <h5>Power: {{power}}</h5>
                                    <Button class="btn">Remove</Button>
                                </div>
                            {{/each}}


                        </div>
                    </div>
                {{/each}}
            {{else}}
                <h2>Please create a squad to continue</h2>
            {{/if}}
        </div>

    </section>
{{/partial}}
{{> layout.hbs}}
